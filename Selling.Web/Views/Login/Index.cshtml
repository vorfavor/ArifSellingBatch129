@model Selling.ViewModel.MstUserViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.Username, new { @class = "control-label" })
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Username, new { @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.Password, new { @class = "control-label" })
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
            </div>
            <div class="col-md-7">
                <button type="button" id="idBtnLogin" class="btn btn-primary pull-right">
                    Login
                </button>
            </div>
        </div>
    </div>
}
<script>
    $("#idBtnLogin").click(function () {
        var vUsername = $("#Username").val();
        var vPassword = $("#Password").val();
        $.ajax({
            url: '/Login/Login',
            type: 'POST',
            data: {
                Username: vUsername,
                Password: vPassword
            },
            success: function (model) {
                    window.location.href = "/Home/Index";
            }
        });
    });
</script>
